  <form action="/@@register" class="rowlike enableUnloadProtection kssattr-formname-register" data-pat-autotoc="levels: legend; section: fieldset; className: autotabs" enctype="multipart/form-data" id="form" method="post">
   <!-- Default fieldset -->
   <div class="field pat-inlinevalidation kssattr-fieldname-form.widgets.fullname empty" data-fieldname="form.widgets.fullname" data-pat-inlinevalidation='{"type":"z3c.form"}' id="formfield-form-widgets-fullname">
    <label class="horizontal" for="form-widgets-fullname">
     <span style="color:blue">請輸入大名</span>
     <span class="formHelp">
      如王大明.
     </span>
    </label>
    <div class="fieldErrorBox">
    </div>
    <input class="input-text text-widget protectedtextline-field" id="form-widgets-fullname" name="form.widgets.fullname" type="text" value=""/>
   </div>
   <div class="field pat-inlinevalidation kssattr-fieldname-form.widgets.email empty" data-fieldname="form.widgets.email" data-pat-inlinevalidation='{"type":"z3c.form"}' id="formfield-form-widgets-email">
    <label class="horizontal" for="form-widgets-email">
     <span style="color:blue">電子信箱</span>
     <span class="required horizontal" title="必要的">
     </span>
     <span class="formHelp">
      當忘記密碼時，可以透過 email 重設密碼.
     </span>
    </label>
    <div class="fieldErrorBox">
    </div>
    <input class="input-text email-widget required protectedemail-field" id="form-widgets-email" name="form.widgets.email" type="text"/>
   </div>
   <div class="field pat-inlinevalidation kssattr-fieldname-form.widgets.username empty" data-fieldname="form.widgets.username" data-pat-inlinevalidation='{"type":"z3c.form"}' id="formfield-form-widgets-username">
    <label class="horizontal" for="form-widgets-username">
     <span style="color:blue">帳號</span>
     <span class="required horizontal" title="必要的">
     </span>
     <span class="formHelp">
      登入用，請以英文開頭，並只使用英文及數字，字母大小寫有別.
     </span>
    </label>
    <div class="fieldErrorBox">
    </div>
    <input class="input-text text-widget required asciiline-field" id="form-widgets-username" name="form.widgets.username" type="text" value=""/>
   </div>
   <div class="field pat-inlinevalidation kssattr-fieldname-form.widgets.password empty" data-fieldname="form.widgets.password" data-pat-inlinevalidation='{"type":"z3c.form"}' id="formfield-form-widgets-password">
    <label class="horizontal" for="form-widgets-password">
     <span style="color:blue">密碼</span>
     <span class="required horizontal" title="必要的">
     </span>
     <span class="formHelp">
      輸入新的密碼。 至少要有 5 個字元。
     </span>
    </label>
    <div class="fieldErrorBox">
    </div>
    <input class="input-text password-widget required password-field" id="form-widgets-password" name="form.widgets.password" type="password"/>
   </div>
   <div class="field pat-inlinevalidation kssattr-fieldname-form.widgets.password_ctl empty" data-fieldname="form.widgets.password_ctl" data-pat-inlinevalidation='{"type":"z3c.form"}' id="formfield-form-widgets-password_ctl">
    <label class="horizontal" for="form-widgets-password_ctl">
     <span style="color:blue">確認密碼</span>
     <span class="required horizontal" title="必要的">
     </span>
     <span class="formHelp">
      再次輸入密碼，請確定密碼是一致的。
     </span>
    </label>
    <div class="fieldErrorBox">
    </div>
    <input class="input-text password-widget required password-field" id="form-widgets-password_ctl" name="form.widgets.password_ctl" type="password"/>
   </div>
   <!-- Secondary fieldsets -->
   <div class="formControls pull-left">
    <input class="pull-left submit-widget button-field button btn btn-continue" id="form-buttons-register" name="form.buttons.register" type="submit" value="註冊" style="background:#6a2" />
   </div>
   <span tal:replace="structure context/@@authenticator/authenticator">
   </span>
  </form>

<script>
$('.ajax').colorbox({
    onComplete : function() {
       $(this).colorbox.resize({'width': '60%', });
    }
});
</script>

